generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booster {
  id            Int             @id @default(autoincrement())
  name          String
  img           String?
  unlock        String
  CardOnBooster CardOnBooster[]
}

model CardOnBooster {
  booster_id Int
  booster    Booster @relation(fields: [booster_id], references: [id])
  card_id    Int
  card       Card    @relation(fields: [card_id], references: [id])
  rarity     String?
  @@id([booster_id, card_id])
}

model Card {
  id            Int             @id @default(autoincrement())
  name          String
  img           String?
  description   String?
  CardOnBooster CardOnBooster[]
}
